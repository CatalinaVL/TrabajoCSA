  journal = {Cuadernos de Econom\'ia},
  keywords = {Elasticidad,Elasticity,Estimation methods,Income,Ingreso,Intergenerational mobility,Métodos de estimación,Movilidad intergeneracional},
  language = {es},
  number = {115}
}

